<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="Hello Travis!"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:autoSizeTextType="uniform"/>

        <!--<ImageView
            android:id="@+id/barcode"
            android:layout_below="@id/introduction"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="150dp" />-->

        <TextView
            android:id="@+id/hoursandstrikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/introduction"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:text="You have 0 hour(s) and 0 strike(s)."
            android:textColor="#000000"
            android:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/intro_blurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hoursandstrikes"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:text="@string/introduction_blurb"
            android:textColor="#000000"
            android:autoSizeTextType="uniform" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/intro_blurb"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:text="@string/introduction_officers"
            android:textColor="#000000"
            android:textSize="20sp"
            android:autoSizeTextType="uniform" />
    </RelativeLayout>
</ScrollView>